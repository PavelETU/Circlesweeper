<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/mine_out"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/game_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/checking_btn"
        android:scaleType="fitXY"/>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:id="@+id/checking_btn"
        android:scaleType="fitXY"
        android:src="@drawable/bomb_check"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="checking_on_off"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Small Text"
        android:id="@+id/score_out"
        android:layout_alignTop="@+id/mine_out"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp" />

</RelativeLayout>